{
  "name": "scancar",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "start": "npm run build && node dist/server/server/index.js",
    "postinstall": "playwright install chromium",
    "preview": "vite preview",
    "scrape": "ts-node --project tsconfig.server.json server/scraper.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "node-schedule": "^2.1.1",
    "playwright": "^1.44.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.4"
  }
}
